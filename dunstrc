[global]
    # Follow window manager focus.
    follow = keyboard
    # Appearance.
    font = Fira Sans Medium 10
    frame_color = "#c5c8c6"
    separator_color = "#c5c8c6"
    frame_width = 1
    geometry = "300x5-0-22"
    horizontal_padding = 4
    markup = full
    max_icon_size = 32
    padding = 4
    word_wrap = yes
    # Programs.
    dmenu = rofi -dmenu
    browser = firefox -new-tab

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    msg_urgency = low
    background = "#282a2e"
    foreground = "#717373"

[urgency_normal]
    msg_urgency = normal
    background = "#373b41"
    foreground = "#c5c8c6"

[urgency_critical]
    msg_urgency = critical
    background = "#853535"
    foreground = "#d2d6d4"


